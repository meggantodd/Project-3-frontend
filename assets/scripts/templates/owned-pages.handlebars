{{#each pages as |page|}}

<div class="col-xs-4 box">
    <div data-id="{{page._owner}}">
      <ul name='page-name' class='handlebars-fields'>Title: <span class='handlebars' id='page-title'>{{page.title}}</span></ul>
      <ul name='page-content' class='handlebars-fields'>Content: <span class='handlebars' id='page-content'>{{page.content}}</span></ul>
      <input id='page-id' type='hidden' name='page-owner' value= "{{page.id}}">

    <!-- {{#checkUser page._owner}} -->
      <button type="submit" class="edit-button" name="edit-button">Edit</button>
      <button type="submit" class="remove-button" name="remove-button">Remove</button>
      <button type="submit" class="return-to-dashboard" name="return-to-dashboard">Return to dashboard</button>


    <!-- {{/checkUser}} -->
  </div>
</div>
{{/each}}
